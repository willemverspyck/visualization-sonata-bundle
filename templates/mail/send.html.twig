{% extends base_template %}

{% block content %}
    <div class="sonata-ba-delete">
        <div class="box box-danger">
            <div class="box-header">
                <h3 class="box-title">Confirm send e-mail</h3>
            </div>
            <div class="box-body">
                <p>Are you sure you want to send "{{ admin.toString(mail) }}" to:</p>
                <ul>
                    {% for user in mail.users %}
                        <li>
                            {% if user.name is not null %}
                                {{ user.name }}
                            {% else %}
                                {{ user.email }}
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="box-footer clearfix">
                <form method="POST" action="{{ admin.generateObjectUrl('send', mail) }}">
                    <input type="hidden" name="_sonata_csrf_token" value="{{ token }}">

                    <button type="submit" name="btn_delete" class="btn btn-danger"><i class="fas fa-trash-alt" aria-hidden="true"></i> Yes, send e-mail</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
